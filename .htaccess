<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]


    # Force HTTPS and non-www
    RewriteCond %{HTTP_HOST} ^www\.limoroyal\.com [NC]
    RewriteRule ^(.*)$ https://limoroyal.com/$1 [L,R=301]
    
    # Also redirect http://limoroyal.com to https://limoroyal.com
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://limoroyal.com/$1 [L,R=301]
</IfModule>
